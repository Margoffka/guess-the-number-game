<thlogic>
    <attr sel="#headId"
          th:replace="~{fragments/head :: headFragment}"/>
    <attr sel="#game-title" th:text="#{game.title}"/>
    <attr sel="#game-finished"
          th:text="#{game.over.finished}" />
    <attr sel="#result-message"
          th:text="${resultMessage}"/>
    <attr sel="#restart-ref"
          th:href="restart"
          th:text="#{game.over.play.again}"/>
    <attr sel="#home-text"
          th:text="#{game.over.home}"/>
    <attr sel="#footerId"
          th:replace="~{fragments/footer :: footerFragment}" />
</thlogic>